<Page
    x:Class="FlightData.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:FlightData"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>




        <CommandBar Grid.Row="2">
            <CommandBar.PrimaryCommands>

                <AppBarButton Label="Import" Click="AppBarButton_Click">
                    <AppBarButton.Icon>
                        <FontIcon FontFamily="Segoe MDL2 Assets" Glyph="&#xE118;"/>
                    </AppBarButton.Icon>
                </AppBarButton>
                <!--<AppBarButton Label="{Binding Labels.Save, Source={StaticResource LM}}" Command="{Binding AppCommands.ExportProfilesCommand, Source={StaticResource AppManager}}">
                    <AppBarButton.Icon>
                        <FontIcon FontFamily="Segoe MDL2 Assets" Glyph="&#xE11C;"/>
                    </AppBarButton.Icon>
                </AppBarButton>

                <AppBarSeparator/>-->
            </CommandBar.PrimaryCommands>
        </CommandBar>
    </Grid>
</Page>
